                if (count === 0) {
                    alert('未能获取行政区域');
                    return;
                }
                var pointArray = [];
                for (var i = 0; i < count; i++) {
                    var ply = new BMap.Polyline(rs.boundaries[i], {
                        strokeWeight: 2, strokeColor: "#ff0000", strokeStyle: "dashed", enableMassClear: false, enableClicking: false,
                        //strokeOpacity: 0,
                        //fillColor: "#ffffff",
