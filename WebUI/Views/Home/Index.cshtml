@section Script{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#deviceEditDialog').wijdialog({
                autoOpen: false,
                modal: true,
                width: 650,
                resizable: false,
                captionButtons: {
                    pin: { visible: false },
                    refresh: { visible: false },
                    toggle: { visible: false },
                    minimize: { visible: false },
                    maximize: { visible: false }
