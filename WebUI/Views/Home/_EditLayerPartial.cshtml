<script type="text/javascript">
    $(document).ready(function () {
        //editDialog
        $('#layerEditDialog').wijdialog({
            autoOpen: false,
            modal: true,
            width: 650,
            resizable: false,
            captionButtons: {
                pin: { visible: false },
                refresh: { visible: false },
                toggle: { visible: false },
                minimize: { visible: false },
                maximize: { visible: false }
            },
            buttons: [
            {
                text: "保存",
                click: function () {
                    saveLayerData();
                }
            },
            {
                text: "关闭",
                click: function () {
                    closeLayerDialog();
                }
            }],
        });


    });

